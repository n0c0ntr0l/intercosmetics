<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.koda.test.OtherActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuovo Ordine"
        android:id="@+id/b_new_order"
        android:layout_marginLeft="70dp"
        android:layout_above="@+id/b_previous_orders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="nuovoOrdineOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordini Precedenti"
        android:id="@+id/b_previous_orders"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/b_new_order"
        android:layout_alignStart="@+id/b_new_order" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contatti"
        android:id="@+id/b_contacts"
        android:layout_below="@+id/b_previous_orders"
        android:layout_alignLeft="@+id/b_previous_orders"
        android:layout_alignStart="@+id/b_previous_orders"
        android:layout_marginTop="66dp" />

</RelativeLayout>
